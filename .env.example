# JWT Configuration
# IMPORTANT: Change this secret in production! Must be at least 256 bits (32 characters)
JWT_SECRET=your-secret-key-change-this-in-production-must-be-at-least-32-characters-long

# MongoDB Configuration
MONGO_USER_DB=userdb
MONGO_PRODUCT_DB=productdb
MONGO_HOST=localhost
MONGO_PORT=27017

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_USER_TOPIC=user-events
KAFKA_PRODUCT_TOPIC=product-events
KAFKA_MEDIA_TOPIC=media-events

# Service Ports
USER_SERVICE_PORT=8081
PRODUCT_SERVICE_PORT=8082
MEDIA_SERVICE_PORT=8083
FRONTEND_PORT=4200

# File Upload Configuration (Media Service)
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DIR=./uploads

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:4200

# Logging Level (optional)
LOGGING_LEVEL=INFO
